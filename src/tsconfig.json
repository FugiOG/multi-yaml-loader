{
  "compilerOptions": {
    "outDir":            "../dist",
    "lib":              ["ES2017"],
    "module":            "commonjs",
    "target":            "ES2017",
    "strict":             true,
    "moduleResolution":  "node",
    "noUnusedLocals":     true,
    "noUnusedParameters": true,
    "esModuleInterop":    true,
    "declaration":        true,
    "skipLibCheck": true
  },

  "include": ["**/*.ts"]
}